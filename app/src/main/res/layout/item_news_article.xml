<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    android:weightSum="1"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="220dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:background="@color/red"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.6">

        <ImageView
            android:id="@+id/iv_news_video"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            />

        <!--<ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_play_indicator"
            android:layout_centerInParent="true"
            />
-->
        <LinearLayout
            android:weightSum="1"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_width="80dp"
            android:layout_height="wrap_content">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/iv_author"
                android:src="@drawable/ic_video"
                android:scaleType="fitCenter"
                android:layout_weight="0.3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:riv_oval="true"
                />
            <LinearLayout
                android:weightSum="1"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="0.7"
                android:layout_height="match_parent">


               <TextView
               android:id="@+id/item_ariticle_author"
               style="@style/Text_Small_Start"
               android:layout_width="match_parent"
               android:layout_height="0dp"
               android:layout_weight="0.6"
               android:layout_gravity="start"
               android:text="0'0'" />

                <TextView
                    android:id="@+id/item_ariticle_time"
                    style="@style/Text_Small_Start"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.6"
                    android:layout_gravity="start"
                    android:text="0'0'" />

                <!-- <TextView
               android:id="@+id/item_top_type"
               style="@style/Text_Small"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"

               android:drawableLeft="@drawable/ic_video"
               android:text="0'0'" />-->

            </LinearLayout>
           <!-- <TextView
                android:id="@+id/item_top_type"
                style="@style/Text_Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:drawableLeft="@drawable/ic_video"
                android:text="0'0'" />-->


        </LinearLayout>



        <LinearLayout
            android:orientation="vertical"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            >


        <!--<TextView
            android:layout_marginTop="60dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:id="@+id/item_top_title"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="XXXXXXXX"
            style="@style/Text_Normal"
            android:gravity="start"
            />-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:orientation="horizontal"
                android:padding="10dp"
                android:weightSum="1">


                <TextView
                    android:id="@+id/item_top_categroy"
                    style="@style/Text_Small"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    android:gravity="start"
                    android:text="xxxxxx" />

                <LinearLayout
                    android:id="@+id/item_ll_text"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2"
                    android:orientation="horizontal">

                    <include layout="@layout/view_fav_reply"></include>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>



    <LinearLayout
        android:weightSum="1"
        android:orientation="vertical"
        android:layout_weight="0.4"
        android:layout_width="match_parent"
        android:layout_height="0dp">

<View
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="0.2"/>

        <TextView
            android:id="@+id/item_news_title"
            android:text="111111"
            style="@style/Text_Normal_Black"
            android:gravity="start"
            android:layout_weight="0.5"
            android:layout_width="match_parent"
            android:layout_height="0dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1"/>

        <TextView
            android:id="@+id/item_news_desc"
            android:text="111111"
            style="@style/Text_Small_Gray"
            android:layout_weight="0.1"
            android:layout_width="match_parent"
            android:layout_height="0dp" />
    </LinearLayout>





    </LinearLayout>




