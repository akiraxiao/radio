<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
       <!-- <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>-->
        <!--<item name="android:windowAnimationStyle">@style/anim_slide_bottom_in_out</item>-->
    </style>

    <style name="AppTheme.NoActionBarBase" parent="AppTheme">
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="AppTheme.Full" parent="AppTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:background">#ffffff</item>
    </style>

    <style name="AppTheme.Start" parent="AppTheme.Full">
        <item name="android:background">#00000000</item>
    </style>

    <!--animation-->
    <style name="anim_slide_bottom_in_out">
        <item name="android:activityOpenEnterAnimation">@anim/slide_bottom_in</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_bottom_out</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.ThemeToolbar" parent="Theme.AppCompat.Light" >
        <!-- navigation icon color -->
        <item name="colorControlNormal">@color/white</item>
    </style>


    <style name="AppTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabMaxWidth">300dp</item>
        <item name="tabIndicatorColor">@color/red</item>
        <item name="tabIndicatorHeight">1dp</item>
        <item name="tabPaddingStart">50dp</item>
        <item name="tabPaddingEnd">50dp</item>
        <item name="tabTextAppearance">@style/AppTabTextAppearance</item>
    </style>

    <!-- for text -->
    <style name="AppTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="textAllCaps">false</item>
    </style>


    <style name="Text_Small">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">8sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Text_Small_Start" parent="Text_Small">
        <item name="android:gravity">start</item>
    </style>

    <style name="Text_Normal" parent="Text_Small">
        <item name="android:textSize">16sp</item>
    </style>
    <style name="Text_Normal_Black" parent="Text_Normal">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">start</item>
    </style>

    <style name="Text_Small_Black" parent="Text_Small">
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">start</item>
    </style>

    <style name="Text_Small_Gray" parent="Text_Small">
        <item name="android:textColor">@color/font</item>
        <item name="android:gravity">start</item>
    </style>

    <!--main_menu_style-->
    <style name="MenuStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginBottom">1dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">#999999</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center</item>
    </style>

</resources>
